                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>

    <div class="container-fluid">
        <div class="row">
            <!--Stage Menu Sidebar-->
            <div id="side-bar" class="col-lg-2">
                <div class="well">
                    <ul class="list-group">
                        <li class="list-group-item">
                            <div class="page-header">
                                <h1 id="stage-header">Test</h1>
                            </div>
                        </li>
                    </ul>
                    <ul class="list-group">
                        <li class="list-group-item">
                            <div class="page-header">
                                <h1 id="stage-header">Test</h1>
                            </div>
                        </li>
                    </ul>
                    <ul class="list-group">
                        <li class="list-group-item">
                            <div class="page-header">
                                <h1 id="stage-header">Test</h1>
                            </div>
                        </li>
                    </ul>
                    <ul class="list-group">
                        <li class="list-group-item">
                            <div class="page-header">
                                <h1 id="stage-header">Test</h1>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
            <!--Main Page Container-->
            <div class="col-lg-10">
                <!--Filters-->
                <ul class="nav nav-pills">
                    <li role="presentation" class="active">
                        <a href="#" class="filter-cards">New Submissions</a>
                    </li>
                    <li role="presentation">
                        <a href="#" class="filter-cards">Submission Review</a>
                    </li>
                    <li role="presentation">
                        <a href="#" class="filter-cards">Add Examples</a>
                    </li>
                    <li role="presentation">
                        <a href="#" class="filter-cards">Discovery Meeting</a>
                    </li>
                    <li role="presentation">
                        <a href="#" class="filter-cards">Initial Scoring</a>
                    </li>
                    <li role="presentation">
                        <a href="#" class="filter-cards">Spec Revies</a>
                    </li>
                    <li role="presentation">
                        <a href="#" class="filter-cards">Create Implementation Options & Add Scope</a>
                    </li>
                    <li role="presentation">
                        <a href="#" class="filter-cards">Requirement Complexity Scoring</a>
                    </li>
                    <li role="presentation">
                        <a href="#" class="filter-cards">Implementation Decisions</a>
                    </li>
                    <li role="presentation">
                        <a href="#" class="filter-cards">Scoring Review Meeting</a>
                    </li>
                    <li role="presentation">
                        <a href="#" class="filter-cards">Complexity</a>
                    </li>
                    <li role="presentation">
                        <a href="#" class="filter-cards">Product Breakdown</a>
                    </li>
                    <li role="presentation">
                        <a href="#" class="filter-cards">Sent to Development</a>
                    </li>
                    <li role="presentation">
                        <a href="#" class="filter-cards"></a>
                    </li>
                    <li role="presentation">
                        <a href="#" class="filter-cards"></a>
                    </li>
                </ul>
                <!--Card Holder-->
                <div class="well">
                    <div class="row">
                        <form class="navbar-form navbar-right">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Filter Cards">
                            </div>
                            <button type="submit" class="btn btn-default">Search</button>
                        </form>
                    </div>
                    <!--Card Holder-->
                    <div class="card-holder">
                        <!--Card-->
                        <ul class="list-unstyled" data-bind="foreach: cards">

                            <div data-bind="if: !Deleted">
                                <div id="card-body" class="panel panel-default">
                                    <div id="card-title" class="panel-heading">
                                        Card Header
                                    </div>
                                    <div class="panel-body">
                                        <p class="card-text">
                                            <div class="panel-body">

                                                <table class="table">
                                                    <tr><td><strong>Suggestion</strong></td><td data-bind="text: Suggestion"></td></tr>
                                                    <tr><td><strong>DateAdded</strong></td><td data-bind="text: DateAdded"></td></tr>
                                                    <tr><td><strong>Suggestor</strong></td><td data-bind="text: Suggestor"></td></tr>
                                                    <tr><td><strong>Department</strong></td><td data-bind="text: Department"></td></tr>
                                                    <tr><td><strong>Team</strong></td><td data-bind="text: Team"></td></tr>
                                                    <tr><td><strong>Stage</strong></td><td data-bind="text: Stage"></td></tr>
                                                    <tr><td><strong>Comment</strong></td><td data-bind="text: Comment"></td></tr>
                                                    <tr><td><strong>Deleted</strong></td><td data-bind="text: Deleted"></td></tr>
                                                    <tr><td><strong>Complexity</strong></td><td data-bind="text: Complexity"></td></tr>
                                                    <tr><td><strong>Notes</strong></td><td data-bind="text: Notes"></td></tr>
                                                    <tr><td><strong>Priority</strong></td><td data-bind="text: Priority"></td></tr>
                                                </table>

                                            </div>
                                        </p>
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="btn-group">
                                                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                        Team
                                                        <span class="caret"></span>
                                                    </button>
                                                    <ul class="dropdown-menu">
                                                        <li>
                                                            <a href="#">Action</a>
                                                        </li>
                                                        <li>
                                                            <a href="#">Another action</a>
                                                        </li>
                                                        <li>
                                                            <a href="#">Something else here</a>
                                                        </li>
                                                        <li role="separator" class="divider"></li>
                                                        <li>
                                                            <a href="#">Separated link</a>
                                                        </li>
                                                    </ul>
                                                </div>
                                                <div class="btn-group">
                                                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                        Stage
                                                        <span class="caret"></span>
                                                    </button>
                                                    <ul class="dropdown-menu">
                                                        <li>
                                                            <a href="#">Action</a>
                                                        </li>
                                                        <li>
                                                            <a href="#">Another action</a>
                                                        </li>
                                                        <li>
                                                            <a href="#">Something else here</a>
                                                        </li>
                                                        <li role="separator" class="divider"></li>
                                                        <li>
                                                            <a href="#">Separated link</a>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                            <div class="col-lg-6" align="right">
                                                <button type="button" class="btn btn-default btn-md">
                                                    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                                                </button>
                                                <button type="button" class="btn btn-default btn-md">
                                                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                                </button>
                                                <button type="button" class="btn btn-default btn-md">
                                                    <span class="glyphicon glyphicon-flag" aria-hidden="true"></span>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!--CARD-->


                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Add Card</h2>
            </div>

            <div class="panel-body">
                <form class="form-horizontal" data-bind="submit: addCard">

                    <div class="form-group" data-bind="with: newCard">
                        <label for="inputSuggestion" class="col-sm-2 control-label">Suggestion</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputSuggestion" data-bind="value:Suggestion" />
                        </div>

                        <label for="inputSuggestor" class="col-sm-2 control-label">Suggestor</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputSuggestor" data-bind="value:Suggestor" />
                        </div>

                        <label for="inputDepartment" class="col-sm-2 control-label">Department</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputDepartment" data-bind="value:Department" />
                        </div>

                        <label for="inputTeam" class="col-sm-2 control-label">Team</label>
                        <div class="col-sm-10">
                            <input type="text" step="any" class="form-control" id="inputTeam" data-bind="value:Team" />
                        </div>

                        <label for="inputStage" class="col-sm-2 control-label">Stage</label>
                        <div class="col-sm-10">
                            <input type="text" step="any" class="form-control" id="inputStage" data-bind="value:Stage" />
                        </div>

                        <label for="inputComment" class="col-sm-2 control-label">Comment</label>
                        <div class="col-sm-10">
                            <input type="text" step="any" class="form-control" id="inputComment" data-bind="value:Comment" />
                        </div>

                        <label for="inputDeleted" class="col-sm-2 control-label">Deleted</label>
                        <div class="col-sm-10">
                            <input type="text" step="any" class="form-control" id="inputDeleted" data-bind="value:Deleted" />
                        </div>

                        <label for="inputComplexity" class="col-sm-2 control-label">Complexity</label>
                        <div class="col-sm-10">
                            <input type="number" step="any" class="form-control" id="inputComplexity" data-bind="value:Complexity" />
                        </div>

                        <label for="inputNotes" class="col-sm-2 control-label">Notes</label>
                        <div class="col-sm-10">
                            <input type="text" step="any" class="form-control" id="inputNotes" data-bind="value:Notes" />
                        </div>

                        <label for="inputPriority" class="col-sm-2 control-label">Priority</label>
                        <div class="col-sm-10">
                            <input type="number" step="any" class="form-control" id="inputPriority" data-bind="value:Priority" />
                        </div>

                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
            </div>
        </div>
    </div>

    <script src="~/Scripts/knockout-3.4.2.js"></script>
</body>

     ﻿@section scripts {
    @Scripts.Render("~/bundles/app")
    }
</html>